@import '~@/assets/styles/mixins'
@import '~@/assets/styles/variables'

.home
  display: flex
  flex-direction: column
  height: 100vh

h1
  font-size: 24px
  margin: 0
  text-align: center

h4
  font-size: 16px
  text-align: center
  max-width: 500px
  margin: 0 auto

.story
  background: #000
  padding: 10px
  text-align: center

  .prompt
    font-style: italic;
    font-size: 22px

    span.long-story
      text-transform: capitalize
  p
    text-align: center
    color: white

  p.instructions
    color: red
    margin-bottom: 0
    text-align: left

form
  width: 100%
  flex-grow: 1
  display: flex
  flex-direction: column

  textarea
    width: 100%
    height: 90%
    background: #000
    color: green
    border: 0
    border-top: 1px solid white
    padding: 10px

  button
    height: 10%
    width: 100%
    background: green
    border: 0
    color: white
    font-size: 28px
    font-weight: bold
