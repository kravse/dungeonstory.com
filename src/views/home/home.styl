@import '~@/assets/styles/mixins'
@import '~@/assets/styles/variables'


@keyframes spin
  from
    transform:rotate(0deg)
  to
    transform:rotate(360deg)

@keyframes blink
  from
    opacity: 1
  to
    opacity: 0

.home
  display: flex
  flex-direction: column
  height: 100vh

h1
  font-size: 36px
  margin: 0
  text-align: center

h4
  font-size: 16px
  text-align: center
  max-width: 500px
  margin: 0 auto

.story
  background: #000
  padding: 10px

  .prompt
    font-style: italic;
    font-size: 22px
    font-weight: 800

    span
      color: violet

    .typing
      animation-name: blink;
      animation-duration: 750ms;
      animation-iteration-count: infinite;
      animation-timing-function: linear;
  p
    text-align: left
    color: white
    max-width: 1200px
    margin: 20px auto

  p.instructions
    color: red
    margin-bottom: 0
    text-align: left
    font-weight: 800

.loading
  display: inline-block
  animation-name: spin;
  animation-duration: 500ms;
  animation-iteration-count: infinite;
  animation-timing-function: linear;

form
  width: 100%
  flex-grow: 1
  display: flex
  flex-direction: column
  background: #000

  textarea
    width: 100%
    height: 90%
    background: #000
    color: green
    border: 1px solid blue
    padding: 10px
    font-size: 45px
    font-weight: 800
    max-width: 1200px
    margin: 0 auto 20px

  button
    height: 10%
    width: 100%
    background: green
    border: 0
    color: white
    font-size: 28px
    font-weight: bold
    max-width: 1200px
    margin: 0 auto 20px

    &:active
      color: red

    &:disabled
      background: grey
      cursor: not-allowed

      &:active
        color: white

dump_media_cache()