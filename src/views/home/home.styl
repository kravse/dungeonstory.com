@import '~@/assets/styles/mixins'
@import '~@/assets/styles/variables'


@keyframes spin
  from
    transform:rotate(0deg)
  to
    transform:rotate(360deg)

@keyframes blink
  from
    opacity: 1
  to
    opacity: 0

.home
  display: flex
  flex-direction: column
  height: 100vh
  padding: 5px 10px
  font-weight: 800

h1
  font-size: 46px
  margin: 0
  text-align: center

h4
  font-size: 16px
  text-align: center
  max-width: 500px
  margin: 0 auto

.story
  padding: 10px

  .prompt
    font-style: italic;
    font-size: 22px

    +media('xs')
      font-size: 16px

    span
      color: violet

    .typing
      animation-name: blink;
      animation-duration: 750ms;
      animation-iteration-count: infinite;
      animation-timing-function: linear;
  p
    text-align: left
    color: white
    max-width: 1200px
    margin: 20px auto

  p.instructions
    color: orange
    margin-bottom: 0
    text-align: left

  p.error
    margin-bottom: 0
    background: #ea1010
    color: white
    border: 1px solid white
    padding: 5px 10px

.loading
  font-size: 35px
  display: inline-block
  animation-name: spin;
  animation-duration: 500ms;
  animation-iteration-count: infinite;
  animation-timing-function: linear;

form
  width: 100%
  flex-grow: 1
  display: flex
  flex-direction: column

  textarea
    width: 100%
    height: 90%
    color: green
    background: #000
    border: 1px solid blue
    padding: 10px
    font-size: 45px
    max-width: 1200px
    margin: 0 auto 20px
    font-weight: 800

    +media('xs')
      font-size: 25px

  button
    width: 100%
    background: green
    padding: 10px
    border: 0
    color: white
    font-size: 22px
    max-width: 1200px
    margin: 0 auto 20px
    font-weight: 800

    &:active
      background: violet

    &:disabled
      background: grey
      cursor: not-allowed

      &:active
        color: white

.creds
  p
    color: orange


